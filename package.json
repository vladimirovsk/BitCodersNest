  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build rest",
    "rest": "nest start rest",
    "serv": "nest start services",
    "sock": "nest start websocket",
    "rest:dev": "nest start rest --watch",
    "sock:dev": "nest start sock --watch",
    "serv:dev": "nest start services --watch",
    "rest:debug": "nest start rest --debug --watch",
    "serv:debug": "nest start services --debug --watch",
    "rest:prod": "node dist/apps/rest/main.js",
    "serv:prod": "node dist/apps/services/main.js",
    "lint": "eslint \\\"{src,apps,libs,test}/**/*.ts\\\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register itservis/node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/rest/test/jest-e2e.json"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/mongoose": "^8.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "mongoose": "^6.1.6",
    "@types/node": "18.11.18",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "googleapis": "^110.0.0",
    "nestjs-rmq": "^2.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "27.5.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
